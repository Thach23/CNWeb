@using DA_WebDienThoai;
@using DA_WebDienThoai.Models;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
        #a:hover #b img {
            transform: scale(1.2);
        }
     
    </style>
</head>
<body class="p-2">
    <div class="container-fluid m-2">
        @*Header*@
        <div class="row bg-danger fixed-top" style="height:60px;  margin-bottom:5px; padding-left:5px;">  
            <div class="col-md-1" style="padding-top:5px;">
                <a href="@Url.Action("Index","DienThoai")"><img src="~/Content/DA_WebHinhAnh/logo.jpg" style="height:45px; width:90px;"/></a>
            </div>
            @*/////////////////////*@
            <div class="col-md-4 ml-3" style="margin-right:100px; padding-top:10px;">
                <form class="form-inline">
                    <input type="search" style="width:350px;" class="form-control" />
                    <button class="btn btn-light">
                        <div class="fa fa-search"></div>
                    </button>
                </form>
            </div>
            @*/////////////////////*@
            <div class="col-md-4" style="float:left; padding-top:10px;">
                <div style="float:left;">
                    <a class="btn btn-warning mr-1 p-1" style="width:auto;">Giỏ hàng <div class="fa fa-shopping-cart"></div></a>
                    <a class="ml-5 text-light" href="#">Dang nhap</a>
                    <a class="text-light border-left pl-2 mr-5" href="#">Dang ky</a>
                </div>
            </div>
            @*/////////////////////*@
            <div class="col-md-2" style="float:left;">
                <button style="height:60px; width:auto; padding-top:-5px;" type="button" class="btn active" onclick="location.href='@Url.Action("Index","DienThoai")'">Thông tin nhóm</button>
            </div>
        </div>
        @*End-Header*@
        @*/////////////////////*@
        @*Body*@
        <div class="row" style="height:auto; width:; padding-top:45px;">
            <div class="col-md-12">
                <div class="row" style="width:3600px; height:auto;">
                    <div class="col-md-12">
                        @*Banners*@
                        <div class="row pl-5 pt-1">
                            <div class="col-md-3 mr-3" style="height:auto;">
                                <div class="row">
                                    <div class="container">
                                        <div id="carouselExample" class="carousel slide mt-1" data-ride="carousel">
                                            <ol class="carousel-indicators">
                                                <li data-target="#carouselExample" data-slide-to="0" class="active"></li>
                                                <li data-target="#carouselExample" data-slide-to="1"></li>
                                                <li data-target="#carouselExample" data-slide-to="2"></li>
                                                <li data-target="#carouselExample" data-slide-to="3"></li>
                                                <li data-target="#carouselExample" data-slide-to="4"></li>
                                                <li data-target="#carouselExample" data-slide-to="5"></li>
                                                <li data-target="#carouselExample" data-slide-to="6"></li>
                                            </ol>
                                            <div class="carousel-inner">
                                                <div class="carousel-item active">
                                                    <img class="d-block w-100 h-50" src="~/Content/DA_WebHinhAnh/QC1.png" alt="First slide" />

                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/DA_WebHinhAnh/QC2.png" alt="Second slide" />

                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/DA_WebHinhAnh/QC3.png" alt="Third slide" />

                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/DA_WebHinhAnh/QC4.png" alt="Third slide" />

                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/DA_WebHinhAnh/QC5.png" alt="Third slide" />

                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/DA_WebHinhAnh/QC6.png" alt="Third slide" />

                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/DA_WebHinhAnh/QC7.png" alt="Third slide" />

                                                </div>
                                            </div>
                                            <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                            <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Next</span>
                                            </a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1 ml-3" style="height:100px;">
                                <div class="row mb-1 pl-5">
                                    <img src="~/Content/DA_WebHinhAnh/QC8.png" />
                                </div>
                                <div class="row mt-2 pl-5 pt-3">
                                    <img src="~/Content/DA_WebHinhAnh/QC9.png" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @*End-Banner*@
                <div class="col-md pr-2" style="margin-top:50px;">
                    <div>
                       @RenderBody()
                    </div>
                </div>
            </div>
        </div >
        @*End-Body*@
        @*/////////////////////*@

    </div>
    @*Footer*@
    <div class="container-fluid bg-dark" style="height:200px;">
        Footer
    </div>
    @*End-Footer*@
    <script src="~/Content/bootstrap/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
</body>


</html>
